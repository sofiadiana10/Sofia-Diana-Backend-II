<div class="row">
  <div class="col s12 m6 offset-m3">
    <h3 class="center-align">Registro</h3>

    {{#if error}}
      <div class="card-panel red lighten-2 white-text center-align">
        {{error}}
      </div>
    {{/if}}

    <form action="/api/sessions/register" method="POST" class="card-panel">
      <div class="input-field">
        <input type="text" id="first_name" name="first_name" required />
        <label for="first_name">Nombre</label>
      </div>

      <div class="input-field">
        <input type="text" id="last_name" name="last_name" required />
        <label for="last_name">Apellido</label>
      </div>

      <div class="input-field">
        <input type="email" id="email" name="email" required />
        <label for="email">Email</label>
      </div>

      <div class="input-field">
        <input type="number" id="age" name="age" required />
        <label for="age">Edad</label>
      </div>

      <div class="input-field">
        <input type="password" id="password" name="password" required />
        <label for="password">Contraseña</label>
      </div>

      <button type="submit" class="btn waves-effect waves-light">Registrarse</button>
    </form>

    <p class="center-align">
      ¿Ya tenés cuenta? <a href="/login">Iniciar sesión</a>
    </p>
  </div>
</div>
