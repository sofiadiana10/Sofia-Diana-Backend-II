<h1>Todos los Carritos</h1>

{{#if carts.length}}
  <div class="row">
    {{#each carts}}
      <div class="col s12 m6 l4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Carrito #{{this._id}}</span>
            <p><strong>Productos:</strong> {{this.products.length}}</p>
          </div>
          <div class="card-action">
            <a href="/cart/{{this._id}}" class="btn waves-effect waves-light">Ver Detalles</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No hay carritos registrados en el sistema.</p>
{{/if}}